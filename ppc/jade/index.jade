		//- //Facebook SDK 
		//- #fb-root
		//- script(src='http://connect.facebook.net/en_US/all.js')
		
		//- include includes/popups
		
		main(ng-class="mainClass")

			include includes/header

			.sections(ng-view)

			include includes/footer
