/* 
	================
	==== POPUPS ====
	================
*/

#popups
	
	.background

		display none
		position fixed
		height 100%
		width 100%
		top 0
		left 0
		z-index 88888
		background #000
		opacity 0.6


	.popup
		z-index 99999
		position absolute
		display none
		background-color #FFF
		border 10px solid rgb(226, 226, 226)

		.close
			cursor pointer
			position absolute
			right -36px
			top -33px
			width 56px
			height 52px
			bg 'close_popup.png'
			background-position left 0px
			text-decoration none !important
			z-index 98

		&[data-popup-name="custom"]
			
			text-align center
			min-height 274px
			width 705px

			.header
				padding 30px 0 50px 0
				h1
					text-transform uppercase
					text-align center
					font-size 30px
				
			.body
				font 24px $mainFont
				color rgb(51, 51, 51)
				padding 0 90px	

			.footer
				padding 50px 0 30px 0
				button
					margin 0 auto

		&[data-popup-name="unique"]

			text-align center
			min-height 274px
			width 705px

			.header
				padding 30px 0 50px 0
				h1
					text-transform uppercase
					text-align center
					font-size 30px
				
			.body
				font 24px $mainFont
