/* 
	================
	==== POPUPS ====
	================
*/

body.popup-open
	overflow hidden
	position fixed
	width 100%

#popups
	
	z-index 998
	display none
	overflow-y auto
	overflow-x hidden
	position fixed
	height 100%
	width 100%
	top 0
	left 0

	.background

		position fixed
		height 100%
		width 100%
		top 0
		left 0
		overflow auto
		background rgb(219, 211, 183)
		opacity 0.9

	.popup
		z-index 999
		position absolute
		display none
		width 100%
		height 100%
	
		.inner
			position absolute
			color #000
			background #FFF
			borderbox()
			padding 50px 30px
			width 520px
			min-height 200px
			border-radius 8px

			.close
				cursor pointer
				position absolute
				z-index 1
				right 20px
				top 20px
				width 14px
				height 14px
				bg 'close.png'
				background-position left 0px
				text-decoration none !important
				

#popups .popup
	
	.inner
	
		.title
			text-align center
			color #000
			font 18px $mainFont
			line-height 1.4

		.body
			text-align center
			color #000
			font 16px $mainFont
			line-height 1.2
			margin 30px 0 0 0
			p
				font 16px $mainFont
				line-height 1.2

		.button
			margin 30px auto 0 auto
			display table
			height 50px
			min-width 100px
			cursor pointer
			padding 16px 35px 0 35px
			borderbox()
			background-color #005697
			border-radius 4px
			font 16px $mainFont
			text-align center
			color #FFF
			&:hover
				background #004677
	
	&[data-popup-name="custom"]
	
		.inner

			.body
				p
					font 22px $mainFont
					text-align center
					color #333
					line-height 1.2
					
