// ROOT 
$root = '../../../../'
// GLOBAL MIXINS
@require '../../../requires/mixins'
// APP MIXINS
@require '../../requires/mixins'


/*________ LAYOUT ________*/


html
	height 100%

body
	height 100%
	overflow-x hidden
	overflow-y auto
	font-family $mainFont
	
body > main
	
	position relative
	min-height 100%
	width 100%

	.main-container
		clearfix()
		position relative
		max-width ($mainWidth)px
		margin 0 auto
		height 100%


/*_________ HEADER __________*/

body > main > header
	clear both
	z-index 2
	width 100%

	.inner
		padding 20px 0
		borderbox()
		height 100%



/*_________ FOOTER ___________*/

body > main > footer
	clear both
	position absolute
	bottom 0
	z-index 2
	width 100%
	height 60px
	.inner
		padding 20px 0
		borderbox()
		height 100%
		


/*__________ VIEWS _________*/

body > main > .views
		
		clear both
		padding-bottom 60px // Height of the footer	

		> .view

			position relative

			.view-content
				padding 20px 0 60px 0
				borderbox()


@require 'requires/layout.media'



